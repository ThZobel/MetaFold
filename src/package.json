{
  "name": "metafold",
  "version": "1.1.0",
  "description": "MetaFold - A comprehensive template manager for folder structures and experiment metadata with interactive visualization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-visualization": "webpack --mode=production",
    "dev-visualization": "webpack --mode=development --watch",
    "dist": "npm run build-visualization && electron-builder --publish=never",
    "build-win": "npm run build-visualization && electron-builder --win",
    "build-mac": "npm run build-visualization && electron-builder --mac",
    "build-linux": "npm run build-visualization && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "folder",
    "template",
    "structure",
    "project-management",
    "metadata",
    "experiments",
    "metafold",
    "visualization",
    "jsoncrack",
    "data-analysis"
  ],
  "author": "NFDI4BioImage Team",
  "license": "MIT",
  "dependencies": {
    "jsongraph-react": "^0.0.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "",
    "electron-builder": "",
    "style-loader": "^4.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.nfdi4bioimage.metafold",
    "productName": "MetaFold",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "assets/**/*",
      "css/**/*",
      "js/**/*",
      "node_modules/jsoncrack/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
